{
    "manifest_version": 3,
    "name": "YouChat",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage",
      "background",
      "identity",
      "webNavigation",
      "cookies"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
      "action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "logo.png",
          "48": "logo.png",
          "128": "logo.png"
        }
      }
  }
  